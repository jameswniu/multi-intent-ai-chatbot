{
  "dashboard": {
    "id": null,
    "title": "AI Chatbot Phase 3 Metrics",
    "panels": [
      {
        "type": "graph",
        "title": "API Response Latency (ms)",
        "targets": [{"expr": "http_request_duration_seconds_sum / http_request_duration_seconds_count"}],
        "datasource": "Prometheus"
      },
      {
        "type": "stat",
        "title": "LLM Token Usage",
        "targets": [{"expr": "sum(llm_token_total)"}],
        "datasource": "Prometheus"
      },
      {
        "type": "gauge",
        "title": "CPU Utilization (%)",
        "targets": [{"expr": "100 - (avg by(instance)(irate(node_cpu_seconds_total{mode='idle'}[5m])) * 100)"}],
        "datasource": "Prometheus"
      },
      {
        "type": "stat",
        "title": "Active Pods",
        "targets": [{"expr": "count(kube_pod_info)"}],
        "datasource": "Prometheus"
      }
    ]
  }
}
